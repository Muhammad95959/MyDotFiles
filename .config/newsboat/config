# general settings
auto-reload yes
max-items 100
confirm-exit yes

# externel browser
browser "/usr//bin/brave %u"
# macro m set browser "/usr//bin/mpv %u"; open-in-browser ; set browser "/usr//bin/brave %u"
# macro l set browser "/usr/bin/brave %u"; open-in-browser ; set browser "/usr/bin/brave %u"

# unbind keys
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# colors
color background          default default 
color listnormal          default default 
color listfocus           black   cyan    bold
color listnormal_unread   red     default 
color listfocus_unread    red     cyan    bold
color title               black   blue    bold
color info                yellow  blue    bold
color hint-key            black   blue    bold
color hint-keys-delimiter black   blue    
color hint-separator      black   blue    bold
color hint-description    black   blue    
color article             default default 

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
